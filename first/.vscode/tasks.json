{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build C++ to bin",  // ← 这个名字必须和 launch.json 一致！
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${workspaceFolder}/bin/${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": ["$gcc"]
    }
    
  ]
}